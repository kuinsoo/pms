<mapper namespace="kr.or.ddit.work.mapper.WorkMapper">

	<!-- 업무 전체 일정 -->
	<select id="workAllSchedule" resultType="workVo">
	<!-- 일정에 필요한 컬럼 정리: 업무제목, 업무시작일자, 업무예상마감일자, 업무마감일자, 업무일정색깔 -->
		SELECT	w.work_title,
				w.work_sdate,
				w.work_eedate,
				w.work_edate,
				w.work_color
		FROM	work w
		<!-- FROM	project_member pm INNER JOIN work w -->
